<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_with(model: @base_point, local: true) do |f| %>
      
      <%= f.label "拠点番号", class: "label-base-point-info" %>
      <%= f.email_field :base_number, class: "form-control" %>
      
      <%= f.label "拠点名", class: "label-base-point-info" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label "勤怠種類", class: "label-base-point-info" %>
      <%= f.text_field :information, class: "form-control" %>
    
      <%= f.submit "拠点情報追加", class: "btn btn-primary btn-block btn-base-point-info" %>
    <% end %>
  </div>
</div>