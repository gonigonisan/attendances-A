<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <% @zyoutyoubs.each do |app| %>
              <h1 class="modal-title">【<%= user.name %>からの1ヶ月分の勤怠申請】</h1>
              <%= form_with(model: @apply, url: user_apply_path(@user), local: true, method: :patch) do |f| %>
                <table class="table table-striped table-bordered table-condensed" id="table-overtime-request">
                  <thead>
                    <th>月</th>
                    <th>指示者確認<div class="maru size_small black">       
                      <div class="letter3">印</div>
                    </th>
                    <th>変更</th>
                    <th>勤怠を確認する</th>
                  </thead>
                  
                  <tbody>
                    <td><%= l(@attendance.worked_on, format: :month) %></td>
                    <td><%= f.select :indicater_check,{'なし':1, '申請中':2, '承認':3, '否認':4},{ class: 'overtime-request input-sm' , required: true } %></td>
                    <td><%= f.check_box :change, id: "change" %></td>
                    <td><%= link_to  "確認","#" %></td>
                  </tbody>
                </table>
                <%= f.submit "変更を送信する", class: "btn btn-primary btn-block btn-overtime-request" %>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>