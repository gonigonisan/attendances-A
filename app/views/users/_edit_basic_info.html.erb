
<h1>基本情報編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: user, url: update_basic_info_user_path(user), local: true, method: :patch) do |f| %>

      <% if user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <%= f.label :name, class: "label-basic-info" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-basic-info" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :affiliation, class: "label-basic-info" %>
      <%= f.text_field :affiliation, class: "form-control" %>
      
      <%= f.label :employee_number,"社員番号", class: "label-basic-info" %>
      <%= f.text_field :employee_number, class: "form-control" %>        
    
      <%= f.label :uid,"コード", class: "label-basic-info" %>
      <%= f.text_field :uid, class: "form-control" %>  
      
      <%= f.label :password, class: "label-basic-info" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :basic_work_time, class: "label-basic-info" %>
      <%= f.time_field :basic_work_time, class: "form-control" %>

      <%= f.label :designated_work_start_time, class: "label-basic-info" %>
      <%= f.time_field :designated_work_start_time, class: "form-control" %>

      <%= f.label :designated_work_end_time, class: "label-basic-info" %>
      <%= f.time_field :designated_work_end_time, class: "form-control" %>

      <div class="center">
        <%= f.submit "編集する", class: "btn btn-primary btn-basic-info" %>
      </div>
    <% end %>
  </div>
</div>