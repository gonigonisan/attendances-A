<% provide(:title, "拠点一覧") %>
<% provide(:class_text, "base-info") %>
<% provide(:button_text, "拠点情報追加") %>
<h1>拠点一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-bordered table-condensed table-hover text-center table-striped" id="table-bas">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>拠点番号</th>
        <th>拠点名</th>
        <th>勤怠種類</th>
      </tr>  
    </thead>
    
    <tbody>
      <% @bases.each do |base| %>
          <tr>
            <td>
              <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <a data-toggle="collapse" data-parent="collapse" href="#collapse<%= base.base_number %>" class="btn btn-primary " >編集</a>
                  </div>
                  <div id="collapse<%= base.base_number %>" class="collapse" >
                    <div class="panel-body">
                      <%=  render 'bases/edit', base: base %>
                    </div>
                  </div>
                </div>
              </div>
            </td>
            <td>
              <%= link_to "削除", basis_path(base.id), method: :delete,
                  data: { confirm: "削除してよろしいですか？" },
                  class: "btn btn-primary" %>
            </td>
            <td><%= base.base_number %></td>
            <td><%= base.base_name %></td>
            <td><%= base.information %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <button type="button" data-toggle="collapse" data-target="#add_base" class="btn btn-lg btn-primary">拠点情報追加</button>
    </div>
    <div id="add_base" class="collapse">
      <div class="panel-body">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>